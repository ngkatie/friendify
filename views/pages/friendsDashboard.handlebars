<link rel="stylesheet" href="../../public/css/friendsdashboard.css">

<nav id="navbar" class="spotify-data">
        <a href="/users/dashboard" class="nav-option">Profile</a>
        <a href="/users/toptracks" class="nav-option">Top 50 Tracks</a>
        <a href="/users/topartists" class="nav-option">Top 50 Artists</a>
        <a href="/users/dailyplaylist" class="nav-option">Daily Playlist</a>
        <a href="friends" class="nav-option nav-active">Friends</a>
        <a href="/users/logout" class="nav-option logout">Logout</a>
    </nav>


<form action="/users/sendFriendRequest" method="POST">

        <h2>Add Friends</h2>
        <label for="email">Enter your friend's email:</label>
        <input type="email" id="email" name="email" required>
        <br>
        <button type="submit">Send Friend Request</button>

        {{#if success}}
            <p>Friend request sent!</p>
        {{/if}}
        
        {{#if error}}
            <p>{{errorMsg}}</p>
        {{/if}}
</form>
<a href="/users/pendingRequests">See All Pending Requests</a>


<div id="friends-list">
    <h2>Friends List</h2>
    <div class="friends-container">
        {{#each friends}}
        <div class="friend">
            <h3>{{username}}</h3>
            {{#if profilePhoto}}
                <img src="{{profilePhoto}}" alt="Friend Profile Picture" class="profile-photo" width="100" height="100">
            {{else}}
                <img src="../../public/images/default_photo.jpg" alt="Default Profile Picture" class="profile-photo" width="100" height="100">
            {{/if}}
            <a href="/users/friends/{{_id}}">View Friend Profile</a>
        </div>
        {{/each}}
    </div>
    {{!-- <a href="dashboard">Back to Profile</a> --}}
</div>