<link rel="stylesheet" href="../../public/css/friendsdashboard.css">
<form action="/users/sendFriendRequest" method="POST">
        <h2>Add Friends</h2>
        <label for="email">Enter your friend's email:</label>
        <input type="email" id="email" name="email" required>
        <br>
        <button type="submit">Send Friend Request</button>
        {{#if success}}
        <p>Friend request sent!</p>
        {{/if}}
        {{#if error}}
        <p>Error when sending friend request</p>
        {{/if}}
</form>
<a href="/users/pendingRequests">See All Pending Requests</a>


<div id="friends-list">
    <h2>Friends List</h2>
    <div class="friends-container">
        {{#each friends}}
        <div class="friend">
            <h3>{{username}}</h3>
            <a href="/users/friends/{{_id}}">View Friend Profile</a>
        </div>
        {{/each}}
    </div>
    <a href="dashboard">Back to Profile</a>
</div>