<div class="Dashboard">    

    <div class="user-info">
        <img src="{{user.images.[0].url}}" alt="Profile Picture" class="img-thumbnail" width="200" height="200">
        <h2>{{user.display_name}}</h2>
        <p>Likes: {{likeCount}}</p>
        <a href="/friends">Friends</a>
    </div>

    <form action="/friend" method="POST" id = "friend-email">
        <label for="email">Enter your friend's email:</label>
        <input type="email" id="email" name="email" required>
        <br>
        <button type="submit">Add Friend</button>
    </form>
     <div id="server">{{error}}</div>
    <div id="error" hidden></div>

    <div class="spotify-data">
        <a href="toptracks">Top 50 Tracks</a>
        <a href="topartists">Top 50 Artists</a>
        <a href="dailyplaylist">Daily Playlist</a>
    </div>

    <div>
        {{#each comments}}
        <div>
            <p>{{this.user}}</p>
            <p>{{this.comment}}</p>
        </div>
        {{/each}}
    </div>

</div>
