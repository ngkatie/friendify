<link rel="stylesheet" href="../../public/css/forms.css">

<div class="signup-form">
  <h2>REGISTRATION</h2>
  <form id="registeration-form" method="POST">
    <label for="usernameInput">Username:</label>
    <input type="text" id="usernameInput" name="usernameInput" required> <br>

    <label for="passwordInput">Password:</label>
    <input type="password" id="passwordInput" name="passwordInput" required> <br>

    <label for="confirmPasswordInput">Confirm Password:</label>
    <input type="password" id="confirmPasswordInput" name="confirmPasswordInput" required> <br>

    <label for="emailInput">Email:</label>
    <input type="email" id="emailInput" name="emailInput" required> <br>

    <input type="submit" value="Register"> <br>
  </form>

  {{#if error}}
  <p>{{errorMessage}}</p>
  {{/if}}
  
  {{#if missing}}
  <p>All fields must be filled out. Missing: {{missingFields}}</p>
  {{/if}}
</div>

<a href="/users/login">Already have an account? Click here to log-in</a>
