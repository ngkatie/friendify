    <script>
        function toggleTheme() {
    
            var theme = document.getElementsByTagName('link')[0];
  
        
            if (theme.getAttribute('href') == "../../public/css/light.css") {
                theme.setAttribute('href', "../../public/css/dark.css");
            } else {
                theme.setAttribute('href', "../../public/css/light.css");
            }
        }
    </script>
